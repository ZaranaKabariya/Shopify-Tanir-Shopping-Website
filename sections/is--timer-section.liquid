<style>
  .timer{
    background-image: url({{section.settings.Bg_image|img_url:"master"}});
    padding:200px 0;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
</style>
<section>
  <div class="timer">
    <div class="container">
      <div class="timer_content">
        <P>LIMITED TIME ONLY</P>
        <h1>
          SUPER SALE UP TO <br>
          40% OFF
        </h1>
        <P>Shop we selection of exclusive handbags and backpacks at reduced price dummy the Super Sale Hurry up!</P>
        <div class="timeer" style="display:flex">
          <div class="demo">
            <p id="demo"></p>
            <span>Days</span>
          </div>
          <span>:</span>
          <div class="demo1">
            <p id="demo1"></p>
            <span>Hours</span>
          </div>
          <span>:</span>
          <div class="demo2">
            <p id="demo2"></p>
            <span>Mins</span>
          </div>
          <span>:</span>
          <div class="demo3">
            <p id="demo3"></p>
            <span>Secs</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

